            <artifactId>poi-ooxml</artifactId>
            <version>3.17</version>
        </dependency>

        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.6</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>

    </dependencies>


    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <scm>
        <tag>master</tag>
        <url>git@github.com:wkclz/excel.git</url>
        <connection>scm:git:git@github.com:wkclz/excel.git</connection>
        <developerConnection>scm:git:git@github.com:wkclz/excel.git</developerConnection>
    </scm>
    <developers>
        <developer>
            <name>wkclz</name>
            <email>wkclz@qq.com</email>
            <timezone>+8</timezone>
            <organization>L.Z.Workstudio</organization>
        </developer>
    </developers>

    <repositories>
        <repository>
            <id>git-maven</id>
            <url>https://gitee.com/wkclz/maven-repository</url>
        </repository>

        <repository>
            <id>maven-ali</id>
            <url>http://maven.aliyun.com/nexus/content/groups/public//</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </snapshots>
        </repository>
    </repositories>

